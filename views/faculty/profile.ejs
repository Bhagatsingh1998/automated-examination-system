<%- include('../includes/faculty-nav.ejs') %>

<section class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
        Faculty Dashboard / Profile
      </li>
    </ol>
  </nav>
</section>

<section class="container">
  <br><br>
  <!-- The Modal -->
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8 border p-2 text-center">
      <h4 class="text-primary">Reset Password</h4> 
      <% if(successMessage) { %>
        <br>
        <div class="text-center" style="color: green;"><%= successMessage %></div>
        <br>
      <% } %>
      <% if(errorMessage) { %>
        <br>
        <div class="text-center" style="color: red;"><%= errorMessage %></div>
        <br>
      <% } %>
      <form method="POST" action="/faculty/update-password">
        <table class="table table-sm table-hover table-bordered">
          <tr>
            <th>Name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><input type="email" disabled name="email" class="form-control" value="<%= user.email %>" placeholder="Student email"></td>
          </tr>
          <tr>
            <th>Password</th>
              <td><input type="password" name="password" class="form-control" placeholder="New faculty password"></td>
          </tr>
          <tr>
            <th>Confirm Password</th>
              <td><input type="password" name="cpassword" class="form-control" placeholder="Confirm new faculty password"></td>
          </tr>
          <tr>
            <td><input type="input" hidden name="_id" value="<%= user._id %>"></td>
            <td><input type="submit" name="submit" value="Save Changes" class="btn btn-primary"></td>
          </tr>
        </table>
      </form>
    </div>
  </div><!-- /// row -->
</section>
   
<br><br><br><br><br>

<%- include('../includes/footer.ejs') %>