<%- include('../includes/admin-nav.ejs') %>

<section class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
      Admin Dashboard / University Exam</li>
    </ol>
  </nav>
</section>

<br> <br>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="border" style="padding:10px;">
          <p>Add University Schedule</p>
          <form method="POST" action="/admin/university-exam" enctype="multipart/form-data">
            <label>Title:</label>
            <input required type="text" name="examTitle" placeholder="Please Enter Title" class="form-control">
            <br>
            <label>Upload File:</label>
            <input required type="file" name="universityExamFile" class="form-control">
            <br>
            <input type="submit" name="submit" value="Add Now" class="btn btn-primary">
          </form>
        </div> <!-- // form order -->
      </div>
      <div class="col-md-6 border">
        <br>
        <h4>All Schedules</h4>
        <% if(universityExams.length > 0) { %>
          <table class="table table-bordered table-striped">
            <tr>
              <th>Title </th>
              <th> Action </th>
            </tr>
            <% for(let universityExam of universityExams) { %>
              <tr>
                <td><%= universityExam.examTitle %></td>
                <td>
                  <a href="/admin/university-exam/<%= universityExam._id %>">
                    <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                  </a>
                </td>
              </tr>
            <% } %>
          </table>
        <% } else { %>
          <h1>No University Exams Registered</h1>
        <% } %>
      </div>
    </div> <!-- // row -->
  </div>
</section>

<br><br><br>

<%- include('../includes/footer.ejs') %>